<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="team.sesh.teamsesh">

    <uses-permission
        android:name="android.permission.INTERNET"
        android:maxSdkVersion="@integer/google_play_services_version">
    </uses-permission>
    <uses-permission
        android:name="android.permission.VIBRATE"
        android:maxSdkVersion="@integer/google_play_services_version" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        android:fullBackupContent="@xml/backup_descriptor">

<!--        <activity android:name=".RadioActivity" />-->

<!--        <service-->
<!--            android:name=".presentation.global.MyRadioPlayerService"-->
<!--            android:enabled="true"-->
<!--            android:exported="false" />-->

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/seshskull_site" />
        <meta-data
            android:name="com.google.firebase.messaging.sound"
            android:resource="@raw/sesh" />

        <service
            android:name=".presentation.global.MyFirebaseService"
            android:exported="false"
            android:directBootAware="true"
            tools:targetApi="n">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>